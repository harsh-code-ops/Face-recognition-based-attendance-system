import face_recognition
import cv2
import numpy as np
import csv
import os
from datetime import datetime

#Using python , set up video capture using cv2.VideoCapture(0) 
video_capture = cv2.VideoCapture(0)

# Loading and encoding Face images
harsh_image = face_recognition.load_image_file("photos/harsh2.jpg")
harsh_encoding = face_recognition.face_encodings(harsh_image)[0]
 
ratan_tata_image = face_recognition.load_image_file("photos/ratan_tata.jpg")
ratan_tata_encoding = face_recognition.face_encodings(ratan_tata_image)[0]
 
Tehzeeb_Ahmed_Abbasi_image = face_recognition.load_image_file("photos/Mr. Tehzeeb Ahmed Abbasi.jpg")
Tehzeeb_Ahmed_Abbasi_encoding = face_recognition.face_encodings(Tehzeeb_Ahmed_Abbasi_image)[0]
 
ritik_image = face_recognition.load_image_file("photos/ritik.jpeg")
ritik_encoding = face_recognition.face_encodings(ritik_image)[0]
 
saquib_image = face_recognition.load_image_file("photos/saquib.jpeg")
saquib_encoding = face_recognition.face_encodings(saquib_image)[0]

azfaar_image = face_recognition.load_image_file("photos/azfaar.jpeg")
azfaar_encoding = face_recognition.face_encodings(azfaar_image)[0]

pushkar_image = face_recognition.load_image_file("photos/pushkar.jpeg")
pushkar_encoding = face_recognition.face_encodings(pushkar_image)[0]

eshav_image = face_recognition.load_image_file("photos/eshav.jpeg")
eshav_encoding = face_recognition.face_encodings(eshav_image)[0]  
# Add more images and encodings as needed

#Creating Lists of known face encodings and names  
known_face_encoding = [
harsh_encoding,
ratan_tata_encoding,
Tehzeeb_Ahmed_Abbasi_encoding,
saquib_encoding,
eshav_encoding,
pushkar_encoding,
azfaar_encoding,
ritik_encoding
]
 
known_faces_names = [
"harsh",
"ratan tata",
"Mr. Tehzeeb Ahmed Abbasi",
"saquib",
"eshav",
"pushkar",
"azfaar",
"ritik"
]

#Initializing Variables
students = known_faces_names.copy()
 
face_locations = []
face_encodings = []
face_names = []
s=True
 
#Creating and Opening CSV file 
now = datetime.now()
current_date = now.strftime("%Y-%m-%d")

f = open(current_date+'.csv','w+',newline = '')
lnwriter = csv.writer(f)

#Main loop : Face recognition and Attendance tracking
while True:
    _,frame = video_capture.read()
    small_frame = cv2.resize(frame,(0,0),fx=0.25,fy=0.25)
    rgb_small_frame = small_frame[:,:,::-1]
    if s:
        face_locations = face_recognition.face_locations(rgb_small_frame)
        face_encodings = face_recognition.face_encodings(rgb_small_frame,face_locations)
        face_names = []
        for face_encoding in face_encodings:
            matches = face_recognition.compare_faces(known_face_encoding,face_encoding)
            name=""
            face_distance = face_recognition.face_distance(known_face_encoding,face_encoding)
            best_match_index = np.argmin(face_distance)
            if matches[best_match_index]:
                name = known_faces_names[best_match_index]
 
            face_names.append(name)
            if name in known_faces_names:
                font = cv2.FONT_HERSHEY_SIMPLEX
                bottomLeftCornerOfText = (10,100)
                fontScale              = 1.5
                fontColor              = (255,0,0)
                thickness              = 3
                lineType               = 2
 
                cv2.putText(frame,name+' Present', 
                    bottomLeftCornerOfText, 
                    font, 
                    fontScale,
                    fontColor,
                    thickness,
                    lineType)
 
                if name in students:
                    students.remove(name)
                    print(students)
                    current_time = now.strftime("%H-%M-%S")
                    lnwriter.writerow([name,current_time])

#Displaying the video Frame
    cv2.imshow("attendence system",frame)
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

#Releasing Resources and Closing the CSV file
video_capture.release()
cv2.destroyAllWindows()
f.close()
